<% unless flash.empty? %>
  <script type="text/javascript">
    <% flash.each do |key, value| %>
    // acquire key from flash, convert to sring, replace alert to error, replace notice to success
    // because toastr only support error or success
      <% type = key.to_s.gsub('alert','error').gsub('notice','success') %>
        toastr['<%= type %>']('<%= value %>')
    <% end %>
  </script>
<% end %>
